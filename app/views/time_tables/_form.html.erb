<%= simple_form_for(@time_table) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :week %>
    <%= f.input :day %>
    <%= f.input :date %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :period %>
    <%= f.input :teacher %>
    <%= f.input :room_number %>
    <%= f.input :subject %>
    <%= f.input :year_group , collection: [:year7, :year8, :year9 , :year10, :year11, :year12] %>
    <%= f.input :student_name %>
    <%= f.input :equipment, collection: [:sports_uniform , :container, :chrome_book ] %>
    <%= f.input :assignment_due %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
